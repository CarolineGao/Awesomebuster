<% provide(:title, "Sign Up") %>
<% content_for :nav, render('layouts/nav_signup') %>

<body>
  <div class="divide50"></div>

  <div class="container">
    <div class="user_signup">
      <h1>Sign up</h1>

      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_for(@tester) do |f| %>
            <%= render 'shared/error_messages_testers' %>

            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <section class="panel_submission">
              <%= f.submit "Create my account", class: "btn btn-primary" %>
              <p>By clicking 'Create my account', you agree to our <a href="/terms">"Terms & Conditions"</a> and acknowledge that you have read our <a href="#">Privacy Policy</a> and <a href="#">Disclosure Guideline</a>.</p>
              <div class="divide15"></div>
              <h6>Already have an account? <%= link_to "Sign in", login_path %></h6>
            </section>

          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="divide80"></div>
</body>
